package components

templ Disks(disks []Disk) {
	@layoutDisks("Disks", disks) {
	}
}

templ sidebarTemplateDisks(disks []Disk) {
    <div class="col-12 col-md-auto p-0" id="main_left_col">
        <div class="h4">Disks</div>
            <div class="border m-0 p-3 text-nowrap" id="main_left">
            <ol class="list-unstyled">
            for _, p := range disks {
                <li class="p"><a href={ templ.URL("/media/disk/" + p.Name) }>{ p.Name }</a> (<a href={ templ.URL("/media/disk/" + p.ID)}>id</a>)</li>
            }
            </ol>
        </div>
    </div>
}

templ layoutDisks(name string, disks []Disk) {
    <!DOCTYPE HTML>
	<html lang="en">
		<head>
            <title>{ name }</title>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
            <link rel="stylesheet" href="/assets/bootstrap.5.3.3.min.css">
            <link href="/assets/style.css" rel="stylesheet" type="text/css" />
            <script src="/assets/htmx.2.0.4.min.js"></script>
		</head>
		<body>
			@headerTemplate()
            <div class="container-fluid pt-4 mt-5 mb-3" id="main">
                <div class="row m-0">
    			@sidebarTemplateDisks(disks)
                <main class="col m-0 px-0 px-md-3">
				{ children... }
                </main>
			</div>
        </div>
@mainLeftHeight()
@themejs()
        </body>
	</html>
}
